node {
     ws("${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_ID}/src/LabOne") {
        withEnv(["GOROOT=/usr/local/go", "GOPATH=${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_ID}/", "PATH+GO=/usr/local/go/bin"]) {
            env.PATH="${GOPATH}/bin:$PATH"

            stage 'Checkout'

            git url: 'https://github.com/palanithangaraj/LabOne.git'

            stage 'preTest'
            sh 'go version'
            sh 'go get -u github.com/golang/dep/...'
            sh 'dep init'

            stage 'Test'
            sh 'go vet'
            sh 'go test -cover'

            stage 'Build'
            sh 'go build .'

            stage 'Deploy'
            // Do nothing.
        }
    }
}
